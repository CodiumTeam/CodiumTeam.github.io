source "https://rubygems.org"

gem "jekyll", git: 'https://github.com/jekyll/jekyll.git', ref: '1d7236f2c2e62cec0cf48d82ccb2985c31cb8594'

# Force the 2.x branch of sass-converter as the 3.x branch is broken by our styles
gem "jekyll-sass-converter", "< 3.0"

# The jekyll theme on which Codium theme is built on top
gem "minima", "~> 2.5.1"

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.6"
end
